<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto">
        <h2>作品編集</h2>


          <%= form_with model: @movie,url: admin_movie_path, method: :put do |f| %>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      作品名
                    </td>
                    <td>
                      <%= f.text_field :name, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      あらすじ
                    </td>
                    <td>
                      <%= f.text_field :introduction, autofocus: true, class:"form-control name"%>
                    </td>
                  </tr>
                  <tr>
                  <th>ジャンル</th>
                  <td>
                  <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
                  </td>
                </tr>
                </tbody>
              </table>


              <div class="form-group text-center">
                <%= f.submit "変更を保存", class:"btn btn-secondary" %>
              </div>

        <% end %>
