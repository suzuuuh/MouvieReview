<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h4>新規登録</h4>
      <%= form_with model: @movie, url: admin_movies_path(@movie), method: :post do |f| %>
        <table class="table">
              <tbody>
                <tr>
                  <th>
                    作品名
                  </th>
                  <td>
                  <%= f.text_field :name %>
                  </td>
                </tr>
                <tr>
                  <th>あらすじ</th>
                  <td>
                  <%= f.text_field :introduction %>
                  </td>
                </tr>
                <tr>
                  <th>ジャンル</th>
                  <td>
                  <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="form-group">
              <%= f.submit '新規登録', class:"btn btn-success" %>
              </div>
            <% end %>
