<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>投稿履歴一覧</h3>
        <table class="table">
          <thead>
            <th>投稿日時</th>
            <th>投稿者</th>
            <th>作品名</th>
            <th>レビュー</th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post.created_at.strftime('%Y/%m/%d'),admin_post_path(post.id) %>
              </td>
              <td><%= post.user.nick_name %></td>
              <td><%= post.movie.name %></td>
              <td>
                <%= post.review %>
  			      </td>
              <td>
                <%= link_to "削除", admin_post_path(post.id), class:"btn btn-danger btn-sm", method: :delete,data: {confirm: "削除しますか？"} %>
              </td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

