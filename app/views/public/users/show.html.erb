            <div class="form-group">
              <%= link_to "一覧を見る", posts_path, class:"btn btn-outline-success btn-sm" %>
            </div>
      <h5>登録情報</h5>
      <div class="form-group">
        <%= link_to "編集する ", edit_user_path, class:"btn btn-outline-primary btn-sm" %>
      </div>
    </div>
