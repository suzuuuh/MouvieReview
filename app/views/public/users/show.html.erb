  <p class="notice"></p>
  <div class="container">
    <div class="row">
    <table class="table">
      <tbody>




  <p class="notice"></p>
    <div class="container">
    <div class="row">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "200x200" %>
      <% else %>
        <%= image_tag asset_path('no_image.jpg'), size: "200x200" %>
      <% end %>
          <tr>
            <th>氏名</th>
            <td>
              <%= @user.nick_name %>
            </td>
          </tr>
          <tr>
            <th>年齢</th>
            <td>
              <%= @user.age %>
            </td>
          </tr>
          <tr>
            <th>性別</th>
            <td>
              <%= @user.sex %>

              <%#= User.sex_i18n[@user.sex] %>
              <%#= f.hidden_field :payment_method, value: @order.payment_method %>
