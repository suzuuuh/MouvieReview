<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

        <table class="table">
          <tbody>
          <tr>
            <th>ニックネーム</th>
            <td>
              <div class="field">
                <%= f.text_field :nick_name %>
              </div>
            </td>
            <td>
          </tr>
          <tr>
            <th>プロフィール画像</th>
            <td>
              <div class="field">
                <%= f.file_field :profile_image, accept: "profile_image/*" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>年齢</th>
            <td>
              <div class="field">
                <%= f.text_field :age %>
              </div>
            </td>
          </tr>
          <tr>
            <th>性別</th>
            <td>
              <div class="field">
                <%= f.text_field :sex %>
              </div>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>ケタ以上)</em>
                <% end %><br />
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード（確認用）
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </td>
          </tr>
       </tbody>
    </table>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

<%= render "public/shared/links" %>
