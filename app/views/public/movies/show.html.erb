<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="border border-warning">
    	 <article>
        <h2 class="text-center m-5 border-bottom p-1 color:blue;">
          <%= @movie.name %>
        </h2>
        <h5 class="font-size:1em; m-5 text-center">
          <%= @movie.introduction %>
        </h5>
        </article>
      </div>
      <div class="col-8 text-center mx-auto"><br>
        <p>レビューを投稿する</p>
        <%= form_with model: @post, local: true do |f| %>
          <%= f.hidden_field :movie_id %>
          <%= f.text_area :review %><br>
          <%= f.submit %>
        <% end %><br>
      </div><br>
      <div class="inverse">
        <% if @post.errors.any? %>
              <%= @post.errors.count %>件のエラーが発生しました
              <ul>
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <div class="border-bottom p-1 color:blue;">
              <h5>この映画に対するレビュー</h5>
            </div>
            <p id="notice"></p>
        <% if @posts.any? %>
          <% @posts.each do |post| %>
            <%= link_to post_path(post.id) do %>
            投稿者:<%= post.user.nick_name %><br>
            内容:<%= post.review %><br>
            <% end %>
            <div class="text-right">
              <% if current_user && post.user_id == current_user.id %>
                <%= link_to "編集", edit_post_path(post) %>|<%= link_to "削除", post_path(post.id), "data-confirm" =>"本当に削除しますか？", method: :delete %>
              <% end %>
            </div>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>









