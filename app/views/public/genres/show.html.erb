<div class="container" style="text-align: center;">
  <section class="d-flex" style="flex-direction: column;">
	<p id="notice"></p>
      <h3>作品一覧</h3><br>
      <div class="d-flex flex-wrap mx-auto">
              <% @genre.movies.each do |movie| %>
                <div class="item" style="width: 200px; margin-top: 2%;">
                    <%= link_to movie_path(movie) do %>
                    <div class="col-25 p-0 m-auto text-decoration-none">
                      <%= movie.name %><br>
                      <%= movie.introduction %>
                      </div>
                    <% end %>
                </div>
              <% end %>
              <h4><%= @message %></h4>
    </div>
</div>
