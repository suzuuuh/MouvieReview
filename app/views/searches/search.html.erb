<h2>Results index</h2>

<table class="table table-hover table-inverse">

    <tbody>
      <% @movies.each do |movie| %>
      <div class="col-md-2">
          <%= link_to movie_path(movie.id) do %>
            <tr>
              <td><%= movie.name %></td>
              <td><%= movie.introduction %></td>
            </tr>
          <% end %>
        </div>
      <% end %>
      <h3><%= @message %></h3>
    </tbody>
</table>